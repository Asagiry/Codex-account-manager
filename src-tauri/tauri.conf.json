{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Codex Account Manager",
  "version": "0.1.0",
  "identifier": "com.asagiry.codexaccountmanager",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm --prefix ui run dev -- --host",
    "beforeBuildCommand": "npm --prefix ui run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Codex Account Manager",
        "width": 1280,
        "height": 820,
        "minWidth": 1080,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}